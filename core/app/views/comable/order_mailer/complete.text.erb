    <%- shipment = @order.shipment %>
    <%- if shipment %>
    <%= @order.class.human_attribute_name(:shipment_method) %>:
            <%= shipment.name %>
    <%- end %>

    <%= @order.class.human_attribute_name(:ship_address) %>:
            <%= name_with_honorific @order.ship_full_name %>

