#products
  ol.breadcrumb
    li
      = link_to 'Products', comable.products_path
    li.active
      | Categories

  section.category.col-sm-2
    h2
      | Category
    ul
      li
        | Category 1
      li
        | Category 2

  section.products.col-sm-10
    - @products.each_slice(3) do |products|
      ul.row
        - products.each do |product|
          li.product.col-sm-4
            = link_to comable.product_path(product), class: 'thumbnail' do
              img width='100%' alt="dummy" src="data:image/svg+xml;base64,"

            h2.name
              = link_to product.name, comable.product_path(product)
            .caption
              = product.caption
            .price
              = number_to_currency product.price
